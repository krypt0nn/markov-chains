#!/usr/bin/env bash
set -e
if [[ ! -d "/home/observer/projects/rust/markov-chains" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/observer/projects/rust/markov-chains")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/observer/projects/rust/markov-chains" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/observer/projects/rust/markov-chains/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/observer/projects/rust/markov-chains/.envrc" "/home/observer/projects/rust/markov-chains/.direnv"/*.rc
